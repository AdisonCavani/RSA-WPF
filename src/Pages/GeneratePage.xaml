<Page x:Class="RSA_WPF.GeneratePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RSA_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="610"
      d:DesignWidth="772"
      Title="SettingsPage"
      Background="#121416">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/res/icons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0">
            <Border
                Width="692"
                Height="85"
                CornerRadius="7"
                Background="#1b1d1f">
                <Grid>
                    <TextBlock
                    Margin="20,28,0,0"
                    Text="GENERATE PAGE"
                    Style="{StaticResource TitleText}"/>

                    <TextBlock
                    Margin="20,45,0,0"
                    Text="Generate RSA key pair with selected key size"
                    Style="{StaticResource NormalText}"/>

                    <Image
                        Source="/assets/generate.png"
                        Margin="540,0,0,0"/>
                </Grid>
            </Border>
        </Grid>
        <Grid
            Grid.Row="1"
            Background="#121416">

            <TextBlock
                    Margin="550,100,0,0"
                    Text="Public key"
                    Style="{StaticResource NormalText}"/>

            <TextBlock
                    Margin="150,100,0,0"
                    Text="Private key"
                    Style="{StaticResource NormalText}"/>

            <ComboBox
                x:Name="KeySize"
                Width="100"
                Height="20"
                SelectionChanged="KeySize_SelectionChanged">
                <ComboBoxItem>512 bit</ComboBoxItem>
                <ComboBoxItem>1024 bit</ComboBoxItem>
                <ComboBoxItem>2048 bit</ComboBoxItem>
                <ComboBoxItem>3072 bit</ComboBoxItem>
                <ComboBoxItem>4096 bit</ComboBoxItem>
            </ComboBox>

            <Button
                x:Name="GenerateButton"
                Width="90"
                Height="30"
                Content="Generate"
                Margin="0, 100, 0, 0"
                Click="GenerateButton_Click"
                Style="{StaticResource PrimaryButton}"/>

            <!--<Path
                Data="{StaticResource Copy}"
                Fill="#a6a6a6"
                Stretch="Uniform"
                Width="15"
                Height="15"
                Margin="250,100,0,0"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                PreviewMouseLeftButtonUp="PrivateKeyTextBox_PreviewMouseDown"
                Cursor="Hand"/>-->

            <TextBox
                x:Name="PrivateKeyTextBox"
                Width="200"
                Height="200"
                Background="White"
                Margin="-400,0,0,0"
                IsReadOnly="True"
                TextWrapping="Wrap"
                PreviewMouseLeftButtonUp="CopyPrivateKey"
                Cursor="Hand"/>

            <TextBox
                x:Name="PublicKeyTextBox"
                Width="200"
                Height="200"
                Background="White"
                Margin="400,0,0,0"
                IsReadOnly="True"
                TextWrapping="Wrap"
                Cursor="Hand"/>
        </Grid>
    </Grid>
</Page>
