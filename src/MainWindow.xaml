<Window xmlns:customcontrols="clr-namespace:RSA_WPF.customcontrols"  x:Class="RSA_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanMinimize">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0" UseAeroCaptionButtons="False" ResizeBorderThickness="7"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/res/icons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!--Layouting-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="228"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid
            Grid.Column="0"
            Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel
                Orientation="Vertical"
                Margin="0,0,0,0"
                Background="#1b1d1f">

                <!--Profile Image and Username Code-->
                <!--<StackPanel
                    Margin="0, 30">
                    <Ellipse
                        Height="50"
                        Width="50">
                        <Ellipse.Fill>
                            <ImageBrush
                                ImageSource="{Binding ProfileImage}"
                                Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock
                        HorizontalAlignment="Center"
                        Margin="0,10"
                        Text="{Binding ProfileName}"
                        Style="{StaticResource MainText}"/>
                </StackPanel>-->

                <!--#region Menu Buttons Section-->
                <StackPanel Orientation="Vertical"
                            Margin="0, 90, 0, 0">
                    <TextBlock
                        Margin="30,0,0,15"
                        Text="M E N U"
                        Style="{StaticResource TitleText}"/>

                    <customcontrols:MenuButton
                        Margin="0,0,0,0"
                        Padding="30,0,0,0"
                        Icon="{StaticResource Lock}"
                        Text="Encrypt" 
                        GroupName="MenuButton"/>
                    <customcontrols:MenuButton
                        Padding="30,0,0,0"
                        Icon="{StaticResource Unlock}"
                        Text="Decrypt" 
                        GroupName="MenuButton"/>
                    <customcontrols:MenuButton
                        Padding="30,0,0,0"
                        Icon="{StaticResource Generate}"
                        Text="Generate" 
                        GroupName="MenuButton"/>
                </StackPanel>

                <customcontrols:MenuButton
                    DockPanel.Dock="Bottom"
                    Padding="30,0,0,0"
                    Margin="0, 325"
                    Icon="{StaticResource Settings}"
                    Text="Settings" 
                    GroupName="MenuButton"/>

                <!--#endregion-->
            </StackPanel>
        </Grid>

        <!--Center page-->
        <Grid
            Grid.Column="1"
            Grid.Row="1"
            MouseDown="Grid_MouseDown"
            Background="#121416">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="0"

                Cursor="Hand">

                <!--Close button-->
                <Button
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0, 10, 10, 0"
                Click="CloseButton_Click"
                Style="{StaticResource CloseButton}">
                </Button>
                <Path
                Width="10"
                Height="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="13"
                Data="M 11 5 L 11 11 L 5 11 L 5 13 L 11 13 L 11 19 L 13 19 L 13 13 L 19 13 L 19 11 L 13 11 L 13 5 L 11 5 z"
                Fill="#7e0508"
                Stretch="Fill"
                Cursor="Hand"
                MouseDown="CloseButton_Click">
                    <Path.LayoutTransform>
                        <RotateTransform Angle="45"></RotateTransform>
                    </Path.LayoutTransform>
                </Path>

                <!--Minimalize button-->
                <Button
                Content=""
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0, 10, 38, 0"
                Click="MinimizeButton_Click"
                Style="{StaticResource MinimizeButton}">
                </Button>
                <Path
                Width="14"
                Height="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,19,41,0"
                Stroke="#985712"
                StrokeThickness="2"
                Stretch="Fill"
                Cursor="Hand"
                MouseDown="MinimizeButton_Click">
                    <Path.Data>
                        <LineGeometry StartPoint="0,0" EndPoint="1,0" />
                    </Path.Data>
                </Path>
            </Grid>

            <Grid
                Grid.Row="1">
                <Button
                Content="ENCRYPT"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0, 34, 67, 0"
                Style="{StaticResource PrimaryButton}"/>
            </Grid>

        </Grid>
    </Grid>
</Window>
